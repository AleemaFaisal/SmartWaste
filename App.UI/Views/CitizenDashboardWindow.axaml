<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:App.UI.ViewModels"
        xmlns:core="using:App.Core"
        x:Class="App.UI.Views.CitizenDashboardWindow"
        Width="1100" Height="750"
        Title="SmartWaste - Citizen Portal"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <vm:CitizenDashboardViewModel />
    </Design.DataContext>

    <Grid x:DataType="vm:CitizenDashboardViewModel">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with better styling -->
        <Border Grid.Row="0" Background="#2E7D32" Padding="25 20">
            <StackPanel>
                <TextBlock Text="SmartWaste Citizen Portal"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0 0 0 5"/>
                <TextBlock Text="{Binding Profile.FullName, FallbackValue='Loading profile...'}"
                           FontSize="16"
                           Foreground="#E8F5E9"/>
                <TextBlock Text="{Binding Profile.AreaName, StringFormat='ðŸ“ {0}'}"
                           FontSize="13"
                           Foreground="#C8E6C9"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="0 10 0 0">

            <!-- Create Listing Tab -->
            <TabItem Header="ðŸ“ Sell Waste">
                <ScrollViewer>
                    <StackPanel Margin="40 30" MaxWidth="650">
                        <TextBlock Text="Create New Waste Listing"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   Margin="0 0 0 25"/>

                        <!-- Category Selection -->
                        <TextBlock Text="Select Waste Category"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Margin="0 0 0 8"/>
                        <ComboBox ItemsSource="{Binding Categories}"
                                  SelectedItem="{Binding SelectedCategory}"
                                  Height="45"
                                  FontSize="14"
                                  Margin="0 0 0 20"
                                  PlaceholderText="Choose a category...">
                            <ComboBox.ItemTemplate>
                                <DataTemplate x:DataType="core:Category">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding CategoryName}" FontWeight="Medium" />
                                        <TextBlock Text="{Binding BasePricePerKg, StringFormat=' (Rs. {0:N2}/kg)'}"
                                                   Foreground="Gray" Margin="5 0 0 0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <!-- Weight Input -->
                        <TextBlock Text="Weight (kilograms)"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Margin="0 0 0 8"/>
                        <NumericUpDown Value="{Binding Weight}"
                                       Minimum="0.1"
                                       Maximum="1000"
                                       Increment="0.5"
                                       FormatString="0.00"
                                       Height="45"
                                       FontSize="14"
                                       Margin="0 0 0 25"/>

                        <!-- Estimated Price Display -->
                        <Border Background="#E8F5E9"
                                BorderBrush="#4CAF50"
                                BorderThickness="2"
                                CornerRadius="10"
                                Padding="20"
                                Margin="0 0 0 25">
                            <StackPanel>
                                <TextBlock Text="Estimated Earnings"
                                           FontWeight="SemiBold"
                                           FontSize="15"
                                           Foreground="#1B5E20"/>
                                <TextBlock Text="{Binding EstimatedPrice, StringFormat='Rs. {0:N2}'}"
                                           FontSize="32"
                                           FontWeight="Bold"
                                           Foreground="#2E7D32"
                                           Margin="0 5 0 0"/>
                                <TextBlock Text="You will receive this amount after collection"
                                           FontSize="12"
                                           Foreground="#66BB6A"
                                           Margin="0 5 0 0"/>
                            </StackPanel>
                        </Border>

                        <!-- Create Button -->
                        <Button Content="Submit Listing"
                                Command="{Binding CreateListingCommand}"
                                Height="50"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Background="#2E7D32"
                                Foreground="White"
                                CornerRadius="8"
                                HorizontalAlignment="Stretch"
                                Margin="0 0 0 15"/>

                        <!-- Success Message -->
                        <Border Background="#E8F5E9"
                                BorderBrush="#4CAF50"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="15"
                                Margin="0 0 0 10"
                                IsVisible="{Binding SuccessMessage, Converter={x:Static ObjectConverters.IsNotNull}}">
                            <TextBlock Text="{Binding SuccessMessage}"
                                       Foreground="#2E7D32"
                                       FontSize="13"
                                       TextWrapping="Wrap"/>
                        </Border>

                        <!-- Error Message -->
                        <Border Background="#FFEBEE"
                                BorderBrush="#EF5350"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="15"
                                Margin="0 0 0 0"
                                IsVisible="{Binding ErrorMessage, Converter={x:Static ObjectConverters.IsNotNull}}">
                            <TextBlock Text="{Binding ErrorMessage}"
                                       Foreground="#C62828"
                                       FontSize="13"
                                       TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- My Listings Tab -->
            <TabItem Header="ðŸ“‹ My Listings">
                <Grid Margin="30 20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header with Refresh Button -->
                    <Grid Grid.Row="0" Margin="0 0 0 15">
                        <TextBlock Text="Your Waste Listings"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                        <Button Content="ðŸ”„ Refresh"
                                Command="{Binding LoadListingsCommand}"
                                HorizontalAlignment="Right"
                                Padding="20 10"
                                Background="#2E7D32"
                                Foreground="White"
                                CornerRadius="6"/>
                    </Grid>

                    <!-- Messages -->
                    <StackPanel Grid.Row="1" Margin="0 0 0 15">
                        <!-- Success Message -->
                        <Border Background="#E8F5E9"
                                BorderBrush="#4CAF50"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="15"
                                Margin="0 0 0 10"
                                IsVisible="{Binding SuccessMessage, Converter={x:Static ObjectConverters.IsNotNull}}">
                            <TextBlock Text="{Binding SuccessMessage}"
                                       Foreground="#2E7D32"
                                       FontSize="13"
                                       TextWrapping="Wrap"/>
                        </Border>

                        <!-- Error Message -->
                        <Border Background="#FFEBEE"
                                BorderBrush="#EF5350"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="15"
                                IsVisible="{Binding ErrorMessage, Converter={x:Static ObjectConverters.IsNotNull}}">
                            <TextBlock Text="{Binding ErrorMessage}"
                                       Foreground="#C62828"
                                       FontSize="13"
                                       TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>

                    <!-- Listings DataGrid -->
                    <DataGrid Grid.Row="2"
                              ItemsSource="{Binding MyListings}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              BorderBrush="#BDBDBD"
                              BorderThickness="1"
                              CornerRadius="4"
                              Background="White"
                              RowBackground="#FAFAFA"
                              HeadersVisibility="Column"
                              CanUserResizeColumns="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ListingID}" Width="70"/>
                            <DataGridTextColumn Header="Category" Binding="{Binding CategoryName}" Width="160"/>
                            <DataGridTextColumn Header="Weight (kg)" Binding="{Binding Weight, StringFormat=N2}" Width="110"/>
                            <DataGridTextColumn Header="Price (Rs.)" Binding="{Binding EstimatedPrice, StringFormat=N2}" Width="110"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding CreatedAt, StringFormat=dd/MM/yyyy}" Width="110"/>
                            <DataGridTemplateColumn Header="Action" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate x:DataType="core:WasteListing">
                                        <Button Content="Cancel"
                                                Command="{Binding $parent[Window].((vm:CitizenDashboardViewModel)DataContext).CancelListingCommand}"
                                                CommandParameter="{Binding ListingID}"
                                                IsEnabled="{Binding Status, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=Pending}"
                                                Background="#EF5350"
                                                Foreground="White"
                                                Height="32"
                                                CornerRadius="4"
                                                Padding="15 5"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Transactions Tab -->
            <TabItem Header="ðŸ’° Transactions">
                <Grid Margin="30 20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header with Refresh Button -->
                    <Grid Grid.Row="0" Margin="0 0 0 15">
                        <TextBlock Text="Transaction History"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                        <Button Content="ðŸ”„ Refresh"
                                Command="{Binding LoadTransactionsCommand}"
                                HorizontalAlignment="Right"
                                Padding="20 10"
                                Background="#2E7D32"
                                Foreground="White"
                                CornerRadius="6"/>
                    </Grid>

                    <!-- Transactions DataGrid -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding MyTransactions}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              BorderBrush="#BDBDBD"
                              BorderThickness="1"
                              CornerRadius="4"
                              Background="White"
                              RowBackground="#FAFAFA"
                              HeadersVisibility="Column"
                              CanUserResizeColumns="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding TransactionID}" Width="70"/>
                            <DataGridTextColumn Header="Amount (Rs.)" Binding="{Binding TotalAmount, StringFormat=N2}" Width="130"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding PaymentStatus}" Width="110"/>
                            <DataGridTextColumn Header="Method" Binding="{Binding PaymentMethod}" Width="110"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding TransactionDate, StringFormat=dd/MM/yyyy HH:mm}" Width="150"/>
                            <DataGridTextColumn Header="Verification Code" Binding="{Binding VerificationCode}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Profile Tab -->
            <TabItem Header="ðŸ‘¤ Profile">
                <ScrollViewer>
                    <StackPanel Margin="40 30" MaxWidth="700">
                        <TextBlock Text="My Profile"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   Margin="0 0 0 25"/>

                        <Border Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="30">
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="170,*">

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="CNIC:" FontWeight="SemiBold" FontSize="14" Margin="0 12"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Profile.CitizenID}" FontSize="14" Margin="0 12"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Full Name:" FontWeight="SemiBold" FontSize="14" Margin="0 12"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Profile.FullName}" FontSize="14" Margin="0 12"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Phone Number:" FontWeight="SemiBold" FontSize="14" Margin="0 12"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Profile.PhoneNumber}" FontSize="14" Margin="0 12"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Area:" FontWeight="SemiBold" FontSize="14" Margin="0 12"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Profile.AreaName}" FontSize="14" Margin="0 12"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="City:" FontWeight="SemiBold" FontSize="14" Margin="0 12"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Profile.City}" FontSize="14" Margin="0 12"/>

                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Address:" FontWeight="SemiBold" FontSize="14" Margin="0 12"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Profile.Address}" TextWrapping="Wrap" FontSize="14" Margin="0 12"/>

                                <TextBlock Grid.Row="6" Grid.Column="0" Text="Member Since:" FontWeight="SemiBold" FontSize="14" Margin="0 12"/>
                                <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding Profile.MemberSince, StringFormat=dd MMMM yyyy}" FontSize="14" Margin="0 12" Foreground="Gray"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

        </TabControl>

        <!-- Loading Overlay -->
        <Border Grid.Row="0" Grid.RowSpan="2"
                Background="#CC000000"
                IsVisible="{Binding IsBusy}">
            <Border Background="White"
                    CornerRadius="10"
                    Padding="40 30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="â³ Loading..."
                               Foreground="#2E7D32"
                               FontSize="18"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Please wait..."
                               Foreground="Gray"
                               FontSize="13"
                               HorizontalAlignment="Center"
                               Margin="0 5 0 0"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
