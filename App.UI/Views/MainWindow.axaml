<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="clr-namespace:Avalonia.Markup.Declarative;assembly=Avalonia.Markup.Declarative"
        xmlns:vm="using:App.UI.ViewModels"
        xmlns:core="using:App.Core"
        x:Class="App.UI.Views.MainWindow"
        Width="400" Height="300"
        Title="App UI">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <StackPanel Margin="10" x:DataType="vm:MainWindowViewModel">
        <TextBlock Text="Users:" FontWeight="Bold" Margin="0 0 0 10"/>

        <ListBox ItemsSource="{Binding Users}">
            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="core:User">
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Content="Reload" Command="{Binding LoadUsersCommand}" Margin="0 10 0 0"/>
    </StackPanel>

</Window>
